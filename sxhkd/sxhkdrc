#
# BSPWM Hotkeys
#

# Misc. Commands

# Restart SXHKD
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart BSPWM
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }q
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + w
	bspc desktop -l next





# Window Manipulation

# Preselect split direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Preselect split ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
# super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}




# Window Movement

# Swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Swap or focus the node in the given direction
super + {_,shift + }{Left, Down, Up, Right}
	bspc node -{f,s} {west,south,north,east}

# Focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local





# Desktop Movement

# Focus or send to the given desktop
super + {_,shift + }{1-4}
	bspc {desktop -f,node -d} '^{1-4}'

alt + {_,shift + }{1-4}
        bspc {desktop -f,node -d} '^{5-8}'





# Launch Shortcuts

# terminal emulator
super + Return
	kitty

# program launcher
super + d
	rofi -show run	





# FN Keys

# light
XF86MonBrightnessUp
	light -A 5

XF86MonBrightnessDown
	light -U 5

# sound
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5% # raise volume

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5% # lower volume

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle # toggle mute for default device
